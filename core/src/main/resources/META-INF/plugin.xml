<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin xmlns:xi="http://www.w3.org/2001/XInclude">
    <id>net.plpgsql.ideadebugger</id>
    <name>PostgreSQL Debugger</name>
    <vendor email="courriel.alexandre.boyer@hotmail.fr" url="https://github.com/ng-galien">Alexandre Boyer</vendor>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.database</depends>

    <depends>com.intellij.platform.images</depends>

    <resource-bundle>message</resource-bundle>

    <extensions defaultExtensionNs="com.intellij.database">
        <debuggerFacade dbms="POSTGRES" implementationClass="net.plpgsql.ideadebugger.PluginFacade"/>
    </extensions>


    <extensions defaultExtensionNs="com.intellij">
        <xdebugger.breakpointType implementation="net.plpgsql.ideadebugger.breakpoint.DBLineBreakpointType"/>
        <virtualFileSystem key="postgres-debugger-plugin"  implementationClass="net.plpgsql.ideadebugger.PluginFileSystem"/>
        <applicationConfigurable parentId="tools"
                             instance="net.plpgsql.ideadebugger.ui.PlDebuggerSettingsDialog"
                             id="net.plpgsql.ideadebugger.settings.PlSettingsConfigurable"
                             displayName="PL/pgSQL Debugger"/>
        <applicationService serviceImplementation="net.plpgsql.ideadebugger.settings.PlDebuggerSettingsState"/>
        <applicationService serviceInterface="net.plpgsql.ideadebugger.service.DebugWatcher"
                            serviceImplementation="net.plpgsql.ideadebugger.service.DebugWatcherImpl" />
        <applicationService serviceInterface="net.plpgsql.ideadebugger.Debugger"
                            serviceImplementation="net.plpgsql.ideadebugger.DebuggerImpl" />
        <notificationGroup displayType="BALLOON" id="PL/pg Notifications"/>
        <notificationGroup id="net.plpgsql.ideadebugger.notification"
                           displayType="BALLOON"
                           key="notification.plugin.start.error"/>
        <toolWindow id="PL/pgSQL" anchor="left" factoryClass="net.plpgsql.ideadebugger.ui.ExplorerFactory" icon="AllIcons.Providers.Postgresql"/>
    </extensions>
    <actions>
        <group id="net.plpgsql.ideadebugger.action.DebuggerActionGroup"
               class="net.plpgsql.ideadebugger.action.DebuggerActionGroup"
               popup="true"/>
        <action id="net.plpgsql.ideadebugger.action.OpenSourceFileAction"
                class="net.plpgsql.ideadebugger.action.OpenSourceFileAction"
                text="Open Source"
                description="Debug PG file">
            <add-to-group
                    group-id="net.plpgsql.ideadebugger.action.DebuggerActionGroup"
                    anchor="last"/>
        </action>
        <action id="net.plpgsql.ideadebugger.action.PlDebugRoutineAction"
                class="net.plpgsql.ideadebugger.action.PlDebugRoutineAction" text="Debug PG routine"
                description="Debug PG routine">
            <add-to-group group-id="DatabaseViewPopupMenu" anchor="after"
                          relative-to-action="DatabaseView.DebugRoutine"/>
        </action>

    </actions>
    <applicationListeners>
        <listener
                class="net.plpgsql.ideadebugger.ui.ExplorerListener"
                topic="net.plpgsql.ideadebugger.service.DebuggerEventListener"/>
    </applicationListeners>
</idea-plugin>
